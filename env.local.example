# Copy to .env.local for local dev. Do NOT commit .env.local.

# -----------------------------
# Core behavior / strategy
# -----------------------------
STRATEGY=balanced

# Risk + filtering (legacy dashboard config)
RISK_PER_TRADE=100
MAX_RISK_PER_SHARE=2.00
MIN_RR_RATIO=1.3
ALLOWED_TICKERS=SPY,QQQ
ALLOWED_TIMEFRAMES=10,15

# -----------------------------
# DVU / integrations (optional)
# -----------------------------
WEBHOOK_SECRET=
ENABLE_AUTO_TRADING=false

TRADIER_API_KEY=
TRADIER_ACCOUNT_ID=
TRADIER_BASE_URL=https://sandbox.tradier.com/v1

ALPACA_API_KEY=
ALPACA_SECRET_KEY=

TWELVEDATA_API_KEY=

# -----------------------------
# Vercel KV (auto-added on Vercel when you connect KV)
# For local dev you can also use Upstash + @vercel/kv.
# -----------------------------
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# -----------------------------
# Admin dashboard telemetry (KV-only)
# Defaults are set in code; you can override here.
# -----------------------------
# Retain admin webhook/decision/order logs for N days (default: 30)
ADMIN_KV_RETENTION_DAYS=30

# Cap time-sorted indexes to keep list views fast (default: 50000)
ADMIN_KV_INDEX_MAX=50000

# Activity feed size (default: 500)
ADMIN_KV_ACTIVITY_MAX=500

# Positions are retained longer for monitoring (default: 180)
ADMIN_KV_POSITIONS_TTL_DAYS=180


